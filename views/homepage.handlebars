<h1>Recent Blog Posts</h1>
{{#each blogs as |blog| }}
<div class="card">
  <div class="card-body">
    <h5 class="card-title"><a href="/blogs/{{blog.id}}">{{blog.title}}</a></h5>
    <h6 class="card-subtitle mb-8">By: {{blog.user.name}}</h6>
    <h6 class="card-subtitle mb-8 text-muted"> {{blog.createdAt}} </h6>
    <p class="card-text">{{blog.content}}</p>
  </div>
</div><br>
{{/each}}