<div class="row">
  <div class="col-auto">
    <h2>Hello, {{user.name}}!</h2>
  </div>
</div>
<div class="row">
  <div class="column col-12 col-md-6">
    <div class="blog-list">
      <h1>My Blog Posts</h1>
      {{#if blogs.length}}
        {{#each blogs  as |blog| }}
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{blog.title}}</h5>
                <h6 class="card-subtitle mb-8">By: {{blog.user.name}} </h6>
                <h6 class="card-subtitle mb-8 text-muted"> {{blog.createdAt}} </h6>
                <p class="card-text">{{blog.content}}</p>
                <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">Delete</button>

                <button class="btn btn-sm">Edit</button>
            </div>
        </div>
        {{/each}}
      {{else}}
      <h4>You have not entered any blog posts yet.</h4>
      {{/if}}
    </div>
  </div>
  <div class="column col-12 col-md-6">
    <h3>Start writing your next Blog Post here!</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name">Blog Post Name:</label>
        <input class="form-control" type="text" id="blog-name" name="blog-name" />
      </div>
      <div class="form-group">
        <label for="blogContent">Blog:</label>
        <textarea class="form-control" id="blogContent" name="blogContent"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/dashboard.js"></script>